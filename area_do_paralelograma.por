programa
{
	
	funcao inicio()
	{
		escreva("Área de um Paralelogramo.\n")
		inteiro base, altura

		escreva("Informe a base do paralelogramo: ")
		leia(base)

		escreva("Informe a altura do paralelogramo: ")
		leia(altura)

		escreva("A área do paralelogramo é: " + base * altura)
	}
}
